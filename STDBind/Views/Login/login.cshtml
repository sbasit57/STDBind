@model STDBind.Models.login_tbl 
@{
    ViewBag.Title = "login";
    Layout = "~/Views/Login/_LayoutPage1.cshtml";
}

<div class="row , container , screen__background">
    <div class="col-md-3">
        <div>
            <h2>
                LOGIN FORM
            </h2>
            @using (Html.BeginForm("login", "Login", FormMethod.Post))
            {
                <table>
                    <tr>
                        <td>
                            @Html.LabelFor(model => model.Name)
                        </td>
                        <td>
                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control , login__input " })
                        </td>
                        <td>
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </td>
                    </tr>

                    <tr>
                        <td>
                        @Html.LabelFor(model => model.Password)
                        </td>
                        <td>
                            @Html.TextBoxFor(model => model.Password, new { @class = "form-control , login__input " })
                        </td>
                        <td>
                            @Html.ValidationMessageFor(model => model.Password, "" , new { @class = "login__input , password" })
                        </td>
                        <td>
                            @ViewBag.FailedMessage
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>
                            <input type="submit" value="Login" name="login" class="button login__submit" />
                        </td>
                    </tr>
                </table>
                <span class="screen__background__shape screen__background__shape4"></span>
                <span class="screen__background__shape screen__background__shape3"></span>
                <span class="screen__background__shape screen__background__shape2"></span>
            }

        </div>

    </div>
    
</div>