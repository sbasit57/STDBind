@model IEnumerable<STDBind.Student_tbl>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@Html.Raw(TempData["CreateMessage"]);
  @Html.Raw(TempData["SizeMessage"])
    @Html.Raw(TempData["ExtensionMessage"])

<style>
    .class1 {
        align-content: center;
        align-items: center;
    }

    .right {
        top: 200px;
        position: absolute;
        right: 300px;
        width: 300px;
        border: 3px solid #73AD21;
        padding: 12px;
    }

    .left {
        top: 200px;
        position: absolute;
        left: 300px;
        width: 300px;
        border: 3px solid #73AD21;
        padding: 10px;
    }
</style>


<p>
    @Html.ActionLink("Create New", "Create")
</p>
<p>
    @using (Html.BeginForm("Index", "Student", FormMethod.Get))
    {
        <div class="right">
            <strong>Search by ID:</strong>
            <br />
            @Html.TextBox("id", " ", new { @class = "form-control input1" })
            <br />
            <input type="submit" value="Search" class="btn btn-primary input1" />
        </div>
        <br />
        <br />
        <div class="left class1">

            @Html.RadioButton("searchBy", "Name")<strong>Name</strong>
            @Html.RadioButton("searchBy", "Email")<strong>Email</strong>
            <br />
            @Html.TextBox("search", " ", new { @class = "form-control input1" })
            <br />
            <input type="submit" value="search" class="btn btn-primary input1" />

            <br />
        </div>
    }
</p>
<p>

</p>
<br />
<br />
<br />
<br />
<br />
<br />
<br />
<br />
<br />
